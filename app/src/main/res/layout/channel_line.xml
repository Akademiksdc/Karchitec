<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forecast_row"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    tools:context="com.paradigmadigital.karchitect.ui.main.MainActivity"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/qtty"
        tools:text="18"
        android:layout_width="18dp"
        android:layout_height="24dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginStart="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/temp"
        />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/mini_icon_height"
        android:layout_height="@dimen/mini_icon_width"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        tools:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toRightOf="@id/qtty"
        />

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Channel name "
        android:gravity="left"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/icon"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>